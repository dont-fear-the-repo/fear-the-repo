{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "globals" : {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__DEBUG_NW__": false
  },
  "rules": {
    "comma-dangle": [1, "never"],
    "func-names": 0,
    "indent": 1,
    "jsx-quotes": [2, "prefer-single"],
    "key-spacing": 0,
    "new-cap": 0,
    "no-else-return": 0,
    "no-multi-spaces": 0,
    "no-shadow": 1,
    "no-unused-vars": 1,
    "no-warning-comments": [1, { "terms": ["todo", "fixme", "xxx"], "location": "start" }],
    "one-var": 0,
    "padded-blocks": 1,
    "quotes": [2, "single"],
    "space-before-function-paren": [0, "never"],
    "spaced-comment": 1
  }
}
